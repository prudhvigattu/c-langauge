#include<stdio.h>
int main()
{
	int c=10,*pC;
	pC=&c;
	printf("Address of c is %p\n",&c);
	printf("value of c is %d\n",c);
	printf("Address of pc is %p\n",pC);
	printf("value of pc is %d\n",*pC);
	c=11;
	printf("Address of c is %p\n",&c);
	printf("value of c is %d\n",c);
	printf("Address of pc is %p\n",pC);
	printf("value of pc is %d\n",*pC);
	*pC=2;
	printf("Address of c is %p\n",&c);
	printf("value of c is %d\n",c);
	printf("Address of pc is %p\n",pC);
	printf("value of pc is %d\n",*pC);
}
